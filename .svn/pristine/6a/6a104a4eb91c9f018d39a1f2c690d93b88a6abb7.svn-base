    $(document).ready(function () {
  
        $("#checkbox").change(function () {
            if (this.checked) {
                alert("a");
            }
        });
    });
  
 
 

    
    $(document).ready(function () {

        $.ajax({
            type: "POST",
            url: '/WayBill/AddVivraniDeatil',
            data: JSON.stringify(obj),

            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (data) {
                alert("Done");

                setControlValue("ttlamt", data[0].TotalAmount);
                $("#ttlamtttxt").removeClass("hide")
                if (data) {
                    var len = data.length;
                    var txt = "";
                    if (len > 0) {

                        for (var i = 0; i < len; i++) {


                            txt += "<tr><td>" + data[i].vivraniSerialNumber + "</td><td>" + data[i].VechileNumber + "</td>"
                                  + "<td>" + data[i].Amount + "</td></tr>";


                        }

                        if (txt != "") {
                            $("#EmployeesTable").append(txt);

                        }
                    }
                }

            },
            error: OnError
        });
    });
 
</script>