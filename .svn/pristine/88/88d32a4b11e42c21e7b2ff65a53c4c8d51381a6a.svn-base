</div>
  </div>
<div class="modal fade" id="confirmSubmission" role="dialog" aria-labelledby="confirmSubmissionLabel" aria-hidden="true">

    <div class="modal-dialog">

        <div class="modal-content">

            <div class="modal-header">

                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>

                <h4 class="modal-title">Delete Parmanently</h4>

            </div>

            <div class="modal-body">

                <p>Are you sure Submit this ?</p>

            </div>

            <div class="modal-footer">

                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>

                <button type="button" class="btn btn-danger" data-target="#filll" id="confirm">Submit</button>

            </div>

        </div>

    </div>

</div>


<div class="modal fade" id="filll" role="dialog" aria-labelledby="filll" aria-hidden="true">

    <div class="modal-dialog">

        <div class="modal-content">

            <div class="modal-header">

                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>

                <h4 class="modal-title">Delete Parmanently</h4>

            </div>

            <div class="modal-body">

                <p>Are you sure Submit this ?</p>

            </div>

            <div class="modal-footer">

                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>

                <button type="button" class="btn btn-danger" id="confirm">Submit</button>

            </div>

        </div>

    </div>

</div>
<script type="text/javascript">
    $(function () {
  
        $(".datepicker").datepicker();

    });
    $(document).ready(function () {

        $("#checkbox").change(function () {
            if (this.checked) {
                alert("a");
            }
        });
    });
  
    $('#confirmSubmission').on('show.bs.modal', function (e) {
          $message = $(e.relatedTarget).attr('data-message');
       
        $(this).find('.modal-body p').text($message);
      
        $title = $(e.relatedTarget).attr('data-title');
         
        $(this).find('.modal-title').text($title);
     
        var form = $(e.relatedTarget).closest('form');
         
        $(this).find('.modal-footer #confirm').data('form', form);
      
    });
 
    $('#confirmSubmission').find('.modal-footer #confirm').on('click', function(){
 
        $(this).data('form').submit();
      
    });

    $('#filll').on('show.bs.modal', function (e) {
        $message = $(e.relatedTarget).attr('data-message');

        $(this).find('.modal-body p').text($message);

        $title = $(e.relatedTarget).attr('data-title');

        $(this).find('.modal-title').text($title);

        var form = $(e.relatedTarget).closest('form');

        $(this).find('.modal-footer #confirm').data('form', form);

    });

    $('#filll').find('.modal-footer #confirm').on('click', function () {

        $(this).data('form').submit();

    });
 

     function saveVivraniDetails()
    {

        var valid = validateTextBoxes('busInformation');
        if (valid == true)
        {
            var obj = new Object();


            obj.vivraniSerialNumber = getControlValueN(@ViewBag.serialnumber);
            obj.VechileNumber = getControlValueN("ddlBusNumber");
            obj.OwnerName = getControlValueN("ddlownerName");
            obj.ServiceName = getControlValueN("ddlDipoo");
            obj.Detail = getControlValueN("txtDetail");
           // obj.date = getControlValueN("txtDate");
            obj.WayBillNumber = getControlValueN("txtVbookNo");
            obj.WayBillSerialNumber = getControlValueN("txtVSerialNo");
            obj.TicketNumber = getControlValueN("txtTktBookNo");
            obj.TicketSerailNumber = getControlValueN("txtTicketSerialNo");
            obj.ServiceTo = getControlValueN("txtArrival");
            obj.ServiceFrom = getControlValueN("txtDearture");
            obj.Amount = getControlValueN("txtMoney");
            obj.TotalAmount = getControlValueN("ttlamt")

           // obj.Reason = getControlValueN("txtReason");
  $.ajax({
                type: "POST",
                url: '/WayBill/AddVivraniDeatil',
                data: JSON.stringify(obj),

                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (data) { 
                    alert("Done");
           
                    setControlValue("ttlamt", data[0].TotalAmount);
                    $("#ttlamtttxt").removeClass("hide")
                    if (data) {
                        var len = data.length;
                        var txt = "";
                        if (len > 0) {
                            for (var i = 0; i < len; i++) {
                               
                                    
                                txt += "<tr><td>" + data[i].vivraniSerialNumber + "</td><td>" + data[i].VechileNumber + "</td>"
                                        + "<td>" + data[i].WayBillNumber + "</td>" + "<td>" + data[i].TicketSerailNumber + "</td>"
                                          + "<td>" + data[i].ServiceFrom + "</td>" + "<td>" + data[i].ServiceTo + "</td>"
                                      + "<td>" + data[i].Amount + "</td></tr>";
                                
                               
                            }
                          
                            
                            if (txt != "") {
                                $("#EmployeesTable").append(txt);

                            }
                        }
                    }

                },
                error: OnError
            });
}}

</script>