                        <div class="form-group">
                            <label for="lblSearch">State :</label>
                            <span id="lblstate"></span>
                        </div>



                    </div>
                </div>

                <div class="col-md-6">
                    <div class="box-body">



                        <div class="form-group">
                            <label for="lblSearch">UAN :</label>
                            <span id="lbluan"></span>
                        </div>
                        <div class="form-group">
                            <label for="lblSearch">PAN :</label>
                            <span id="lblpan"></span>
                        </div>
                        <div class="form-group">
                            <label for="lblSearch">Department :</label>
                            <span id="lbldepartment"></span>
                        </div>
                        <div class="form-group">
                            <label for="lblSearch">Office :</label>
                            <span id="lbloffice"></span>
                        </div>
                        <div class="form-group">
                            <label for="lblSearch">Retirement Date :</label>
