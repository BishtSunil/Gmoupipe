
@{
    ViewBag.Title = "Buses";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/LTE/ui/date.format.js"></script>
<style type="text/css">
    .modal-box {
        width: 650px;
    }

    .grdTrHoverEffect td, .grdTrHoverEffect th {
        text-align: left;
        line-height: 30px;
    }

    .grdTrHoverEffect tr:nth-child(2n+1) td {
        background-color: #eeeeee;
    }
</style>
<div style="height:10px"></div>
<div class="col-md-12 marT20">
    <div class="panel panel-default box-success">
        <div class="panel-body">
            <div class="col-md-6">

                <div class="form-group">
                    <label><input type="checkbox" id="chkSearchbyseats" onclick="abc()" />Serch By seats</label>
                    <input type="text" id="txtSearchbyseats" class=" " />
                </div>
                <div class="form-group">
                    <label><input type="checkbox" id="chkSearchbymodelNo" />Serch By Model</label>
                    <input type="text" id="txtsearchbymodel" class=" " />
                </div>
                <div class="form-group">
                    <label><input type="checkbox" id="chkSearchbyArea" />Serch By Area </label>
                    <input type="text" id="txtSearchbyArea" class=" " />
                </div>
            </div>

        </div>
    </div>
</div>
<div class="PageContent">

    <table cellpadding="0px" cellspacing="0px" width="100%">
        <tr>
            <td style="width: 6px;">
                <asp:Image runat="server" ID="Image1" SkinID="LeftCorner" />
            </td>
            <td class="PageWindowHeader">
                <table width="100%" cellpadding="0px" cellspacing="0px">
                    <tr>
                        <td width="200px">
                            &nbsp; <label>Buses</label>
                        </td>
                        <td align="right"></td>
                    </tr>
                </table>
            </td>
            <td style="width: 6px;">
                <img src="~/Images/gridImages/RightCorner.png" />
            </td>
        </tr>
    </table>

    

    <div class="PageContentWindow" style="text-align: center; font-size: 12px;">
        <table id="BusTable" cellpadding="3px" cellspacing="0px" width="100%" class="grdTrHoverEffect">
            <thead>
                <tr>
                    <th>
                        Bus Number
                    </th>
                    <th>
                        Station
                    </th>
                    <th>
                        Owner Name
                    </th>
                    <th>
                        Registartion Date
                    </th>
                    <th>
                        Number of seats
                    </th>

                    <th style="width:30px">Edit</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
    
        var chk = $("#chkSearchbyseats").val();
        alert(chk);
    })
    function abc()
    {

        var chk = $("#chkSearchbyseats").val();
        alert(chk);
    }
</script>