              function  showWaybllDetail(data)
                {
                  debugger;
                    setControlValue("ttlamt", data[0].TotalAmount);
                    $("#ttlamtttxt").removeClass("hide")

                    if (data) {
                        var len = data.length;
                        var txt = "";
                        if (len > 0) {

                            for (var i = 0; i < len; i++) {
                                if (data[i].IsCoupon == true)
                                {
                                    txt += "<tr><td class=couponcolor>" + data[i].WayBillNo + "</td><td class=couponcolor>" + data[i].WayBillSerialNo + "</td><td class=couponcolor>" + + "</td>" + "<td class=couponcolor>" + data[i].StationFrom + "</td><td class=couponcolor>" + data[i].StationTo + "</td>"
                                      + "<td class=couponcolor id='wbBkNo'>" + + "</td>" + "<td class=couponcolor id='wbSrno'>" + 1 + "</td>"
                                         + "<td class=couponcolor>" + data[i].Fare + "</td></tr>"


                                }
                                else {
                                    txt += "<tr><td  '>" + data[i].WayBillNo + "</td><td>" + data[i].WayBillSerialNo + "</td><td>" + + "</td>" + "<td>" + data[i].StationFrom + "</td><td>" + data[i].StationTo + "</td>"
                                      + "<td id='wbBkNo'>" + + "</td>" + "<td id='wbSrno'>" + 1 + "</td>"
                                         + "<td>" + data[i].Fare + "</td></tr>"


                                }

                              
                            }

                            if (txt != "") {
                                $("#EmployeesTable").append(txt);

                            }
                        }
                    }
                }
              
              function saveCupponDetail() {
                
                    var obj = new Object();
                    
                    obj.WayBillBookNo = getControlValueN("txtCpnWaybillBook");
                    obj.WayBillSerialNo = getControlValueN("txtCpnWaybillSerial");
                    obj.CouponBookNo = getControlValueN("txtCpnBook");
                    obj.CouponSerialNo = getControlValueN("txtCpnSerial");
                    obj.StationFrom = getControlValueN("txtCpnStationFrom");
                    obj.StationTo = getControlValueN("txtCpnStationTo");
                    obj.Fare = getControlValueN("txtCpnFare");
                    obj.TotalAmount = getControlValueN("ttlamt");
                    $.ajax({
                        type: "POST",
                        url: '/WayBill/SaveWayBillCouponDetails',
                        data: JSON.stringify(obj),
                        contentType: "application/json; charset=utf-8",
                        dataType: "json",
                        success: function (data) {
                            document.getElementById("btnClose").click();
                            showWaybllDetail(data);
                        },
