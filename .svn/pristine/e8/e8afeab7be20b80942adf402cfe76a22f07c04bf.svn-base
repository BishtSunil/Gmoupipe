.paymentHistory tr[result="Declined"] td{ background-color:#fbced3;}
.paymentHistory  td[result="Void"]{ color:#f4b100;}
.paymentHistory  td[result="Refund"]{ color:Red;}
        
.paymentHistory  td a[result="hide_Refund"]{ visibility:hidden}
.paymentHistory  td a[result="hide_Void"]{ visibility:hidden}
.paymentHistory  td a[result="hide_Declined"]{ visibility:hidden}

.table-striped tbody tr:hover{background-color:#ffffcc!important}
.pageNextPrev{padding:9px 6px 9px 8px!important}
.pagination > li > a, .pagination > li > span{color:#dd1533}
.pagination > li > a:hover, .pagination > li > span:hover{color:Black}
.dataTables_paginate .active a{background-color:#d2d2d2;color:Black;border-color:#d2d2d2}
.dataTables_paginate .active a:hover{background-color:#e5e5e5;color:Black;border-color:#d2d2d2}
.pagination a[nextPrev]{padding:4px 5px}

