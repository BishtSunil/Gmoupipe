@{
    ViewBag.Title = "Employee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="@Url.Content("~/Scripts/Admin/Js/viewrep.js")" type="text/javascript"></script>
<link href="@Url.Content("~/Content/VMR/bootstrap.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/VMR/txtBtn.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/VMR/font-awesome.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/VMR/ionicons.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/VMR/GridVMR.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/VMR/gridView.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Scripts/Admin/DataTable//bootstrap-multiselect.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/Admin/jquery2.2.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Admin/general.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Admin/jquery-ui-1.10.3.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Admin/validation.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Admin/jshelper.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Admin/ddl.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Admin/jtemplates.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Admin/jtemplatesHelper.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Admin/jquery.form.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Admin/DataTable/bootstrap-multiselect.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Admin/DataTable/gridVmr.js")" type="text/javascript"></script>
        <div class="row" >
            <div class="col-sm-12">
                 <h3 class="listViewHeader">Employee</h3>
                <div class="content tblVMRContainer">
                    <table id="tblGrid" class="table table-bordered table-striped dataTable tblVMR"
                           service="ViewUsers" method="getUserDetailsListView" methodcount="calculateRows"
                           exportmethod="exportGrid" gridid="ViewAccount"
                           allowpaging="y" pagesize="25" defaultsort="FName"
                           defaultsortdirection="desc" newsortcolumn="FName" newsortdirection="desc"
                           totalnoofpages="1" currentpage="1" totalrecords="" calculatepagesagain="y" aretableheadergenerated='n' style="margin-top: 0px!important">
                        <thead>
                            <tr role="row">
                                <th style="width:30px"></th>
                                <th style="width:30px"></th>
                                <th type="bool" column="FName" style="width:200px" columnfriendlyname="First Name"> </th>
                                <th type="string" column="LName" style="width:180px" columnfriendlyname="Last Name"> </th>
                                <th type="string" column="Email" columnfriendlyname="Email" style="width:160px"> </th>
                                <th type="dates" column="DOB" columnfriendlyname="Date Of Birth"> </th>
                                <th type="string" column="Gender" style="width: 135px" columnfriendlyname="Gender (Male)"> </th>
                                <th type="string" column="Address" columnfriendlyname="Address" style="width:70px">  </th>
                                <th type="string" column="City" columnfriendlyname="City" style="width:120px"> </th>
                                 
                                <th type="string" column="date_of_joining" columnfriendlyname="Date Of Joining" style="width:70px">  </th>
                            </tr>
                        </thead>
                        <tbody id="tblShowSoTaskList"></tbody>
                        <script type="text/html" id="tblShowSoTaskListTempleteJS">
                            {#foreach $T as Datashort}
                            <tr id="trProjectReps_{ $T.Datashort.Id }" class="trShowMode" onclick="selectTblVMRRow(this.id)">
                                <td style="text-align:center;">
                                    <a href="javascript:void(0)" onclick="showRepDetail('{ $T.Datashort.Id}')" title="Edit" style="text-decoration:none;" data-toggle="modal" type="button" data-target="#myModal">
                                        <i class="fa fa-edit" style="height:12px;margin-top:7px;"></i>
                                    </a>
                                </td>
                                <td style="text-align:center;"><a href="javascript:void(0)" title="Delete" onclick="deleteUsers('{ $T.Datashort.Id }')"><img src="../Images/Icons/del.gif" style="height:12px;margin-top:7px;"> </a></td>
                                <td>
                                    <a href="javascript:void(0)" onclick="showRepDetail('{ $T.Datashort.Id}')" style="text-decoration:none;" data-toggle="modal" data-target="#myModal">
                                        { $T.Datashort.FName}
                                    </a>
                                </td>
                                <td>
                                    { $T.Datashort.LName}
                                </td>
                                <td>
                                    { $T.Datashort.Email}
                                </td>
                                <td formatdatetime='d,,'>
                                    { $T.Datashort.DOB}
                                </td>
                                <td>
                                    { $T.Datashort.Gender}
                                </td>
                                <td>
                                    { $T.Datashort.City}
                                </td>
                                <td formatdatetime='d,,'>
                                    { $T.Datashort.DateCreated}
                                </td>
                                <td>
                                    <i class="fa fa-fw fa-{ $T.Datashort.isActive}"></i>
                                </td>

                            </tr>
                            {#/for}
                        </script>
                        <tfoot>
                            <tr><td colspan="15" tdfooter></td></tr>
                        </tfoot>
                    </table>

                </div>
            </div>
        </div>
<script type="text/javascript">

    $(document).ready(function () {

        bindGrid(1, 'tblGrid');
        //  createDDLFromAnotherDDL("ddlUserType", "cp1_ddlRoleId", false);
    });
</script>

    