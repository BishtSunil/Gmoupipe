<script>

    function GetStock() {
        ;


        var pumpid = getControlValueN("ddlpumplst");
       
        
        $.ajax({
            type: "GET",
            url: '/Fuel/GetStock?pumpid=' + pumpid,

            dataType: "json",
            data: { "pumpid": pumpid },
            contentType: 'application/json; charset=utf-8',
            success: function (data) {
                if (data) {

                    var len = data.length;
                    var txt = "";
                    if (len > 0) {

                        for (var i = 0; i < len; i++) {
                           
                            
                            var regDate = new Date(parseInt(data[i].RecievingDate.substr(6))).format("dd/mm/yyyy")
                            txt += "<tr><td>" + data[i].FuelType + "</td><td>" + data[i].OpeningStock + "</td>"
                                  + "<td>" + data[i].RecievingQuantity + "</td><td>" + regDate + "</td>"
                                  + "<td>" + data[i].CurrentQuantity + "</td><td>" + data[i].ClosingStock + "</td><td>" + data[i].VechileNumber + "</td></tr>";

                        }

                        if (txt != "") {
                            $("#EmployeesTable").append(txt);

                        }
                    }
                }
            }
        });
    }
    </script>
