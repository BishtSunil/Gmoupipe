                      type: "GET",
                      url: '/WayBill/GetWayBillDetails?busid='+busid ,

                      dataType: "json",
                      data: JSON.stringify(obj),

                      contentType: 'application/json; charset=utf-8',
                      success: function (data) {
                          if (data) {
                              //alert(data);
                              $("#" + $(e).attr("chaildId")).val(data);
                              $("#" + $(e).attr("chaildID2")).val("1");
                          }
                      }

                  });
              }
            </script>
