                    var len = data.length;
                    var txt = "";
                    if (len > 0) {


                        for (var i = 0; i < len; i++) {
                            var vivamount, fuelamount, advance;
                            var td ; 
                            if (data[i].VivraniAmount == null)
                            {
                                vivamount = "N/A";
                            }
